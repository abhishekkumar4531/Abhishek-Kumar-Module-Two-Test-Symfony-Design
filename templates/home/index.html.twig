{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div>
  <h1 class = "text-center mt-3 mb-5">This is ToDo Game</h1>
  <div class = "d-flex justify-content-around">
    <div>
      <div class = "input-group">
        <input class = "form-control p-2" id = "newItem" name = "newItem" required>
        <button class = "addBtn btn btn-primary" id = "addBtn">Add</button>
      </div>
      <h3 class = "mt-3 mb-3">List of un-marked items</h3>
      <div class = "addedItem" id = "addedItem"></div>
    </div>
    <div>
      <h2><span class = "bi bi-check2-all"></span> List of marked items</h2>
      <div class = "markedItem" id = "markedItem"></div>
    </div>
  </div>
</div>
{% endblock %}
